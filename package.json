{
	"name": "spqr",
	"version": "1.1.0",
	"type": "module",
	"private": true,
	"description": "Enhanced Colour QR Code Generator and Scanner (layered channels)",
	"scripts": {
		"clean": "rimraf dist",
		"build": "tsc -p tsconfig.json",
		"dev": "tsx src/dev.ts",
		"start": "node dist/cli.js",
		"test": "vitest run --reporter=dot",
		"lint": "eslint . --ext .ts,.tsx --max-warnings 0",
		"generate": "tsx src/cli.ts generate",
		"decode": "tsx src/cli.ts decode",
		"sweep": "tsx src/sweep.ts",
		"sweep:versions": "tsx src/sweep_versions.ts",
		"web": "tsx src/web.ts"
	},
	"dependencies": {
		"jsqr": "^1.4.0",
		"qrcode": "^1.5.3",
		"rmqr": "^0.3.0",
		"sharp": "^0.33.5"
	},
	"devDependencies": {
		"@types/node": "^22.5.4",
		"@types/qrcode": "^1.5.5",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"eslint": "^9.12.0",
		"rimraf": "^5.0.7",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"vitest": "^2.1.1",
		"@types/canvas": "^2.11.2",
		"canvas": "^2.11.2",
		"qrcode-generator": "^1.4.4"
	},
	"engines": {
		"node": ">=18"
	}
}
